{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsxdev",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "./",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "./node_modules/"
  ],
  "include": [
    "src/**/*",
    "src/__tests__/*",
    "declarations.d.ts"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ]
}
